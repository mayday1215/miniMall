  data-iid="{{item.iid}}"
  >
    <image class="img" src="{{item.show.img}}" mode="widthFix"></image>
    <view class="bottom">
      <view class="title">{{item.title}}</view>
      <text class="price">ï¿¥{{item.price}}</text>
      <image src="/assets/img/common/favor.png" class="icon"></image>

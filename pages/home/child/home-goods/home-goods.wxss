/* pages/home/child/home-goods/home-goods.wxss */
.goods{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  overflow-x: hidden;
}
.goods-item{
  box-sizing: border-box;
  width: 48%;
  box-shadow: 0px 1px 2px rgba(0,0,0,.2);
  padding: 8rpx;
  margin-bottom: 20rpx;
  padding-bottom: 90rpx;
  position: relative;
}
.bottom{
  width: 100%;
  position: absolute;
  bottom:4rpx;
}
.img{
  width: 100%;
}
.title{
  font-size: 32rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.price{
  color: #ff5777;
  font-size: 32rpx;
  margin:0 20rpx 0 50rpx;
}
.cfav{
  font-size: 30rpx;
  color: #333;
}
.icon{
  width: 30rpx;
  height: 30rpx;
}